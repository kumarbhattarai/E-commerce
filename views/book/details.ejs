<%- include('../includes/header') %>
<%- include('../includes/nav', {isAuthenticated: true}) %>

<main class="container mt-5">
    <div class="row">
        <div class="col-md-6 text-center">
            <img src="<%= book.image %>" alt="<%= book.title %>" class="img-fluid" style="max-height: 500px;">
        </div>
        <div class="col-md-6">
            <h1><%= book.title %></h1>
            <h4 class="text-muted"><%= book.author %></h4>
            <p><strong>Category:</strong> <%= book.category %></p>
            <p><strong>Price:</strong> Rs.<%= book.price %></p>
            <p><strong>Stock:</strong> <%= book.stock > 0 ? book.stock + ' available' : 'Out of Stock' %></p>
            <p class="mt-4"><%= book.description %></p>
            <p>Hurry up!! Stock is <%= book.stock %> only</p>

            <% if (book.stock > 0) { %>
                <form action="/cart/add" method="POST" class="mt-4">
                    <input type="hidden" name="bookId" value="<%= book._id %>">
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <span class="input-group-text">Qty</span>
                        <input type="number" class="form-control" name="quantity" value="1" min="1" max="<%= book.stock %>">
                    </div>
                    <button type="submit" class="btn btn-success btn-lg">Add to Cart</button>
                    <button type="submit" formaction="/cart/buy-now" class="btn btn-warning btn-lg ms-2">Buy Now</button>
                </form>
            <% } else { %>
                <button class="btn btn-secondary btn-lg disabled mt-4">Out of Stock</button>
            <% } %>
        </div>
    </div>
</main>

<%- include('../includes/footer') %>

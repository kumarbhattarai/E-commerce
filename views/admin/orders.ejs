<%- include('../includes/header') %>
<%- include('../includes/nav', {isAuthenticated: true}) %>

<main class="container mt-5">
    <h1>All Orders</h1>
    
    <% if (orders.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Items</th>
                    <th>Status</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.orderedBy ? order.orderedBy.email : 'Unknown' %></td>
                        <td>
                            <ul>
                            <% order.items.forEach(item => { %>
                                <li><%= item.bookId ? item.bookId.title : 'Deleted Book' %> (x<%= item.quantity %>)</li>
                            <% }) %>
                            </ul>
                        </td>
                        <td><%= order.status %></td>
                        <td>Rs.<%= order.totalPrice %></td>
                        <td>
                            <form action="/admin/delete-order" method="POST" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                <input type="hidden" name="orderId" value="<%= order._id %>">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div class="alert alert-info">No orders found.</div>
    <% } %>
</main>



<%- include('./includes/header') %>
<%- include('./includes/nav', {isAuthenticated: true}) %>

<main class="container mt-5">
    <h1><%= title %></h1>
    <% if (cart.items.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% cart.items.forEach(item => { %>
                    <% if (item.bookId) { %>
                    <tr>
                        <td><%= item.bookId.title %></td>
                        <td>Rs.<%= item.bookId.price %></td>
                        <td><%= item.quantity %></td>
                        <td>Rs.<%= item.quantity * item.bookId.price %></td>
                        <td>
                            <form action="/cart/delete-item" method="POST">
                                <input type="hidden" name="bookId" value="<%= item.bookId._id %>">
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
        <div class="text-end">
            <h4>Total Price: Rs.<%= totalPrice %></h4>
            <a href="/cart/checkout" class="btn btn-primary">Checkout</a>
        </div>
    <% } else { %>
        <div class="alert alert-warning">Your cart is empty.</div>
    <% } %>
</main>


